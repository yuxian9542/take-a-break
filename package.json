{
  "name": "take-a-break",
  "version": "0.1.0",
  "private": true,
  "packageManager": "pnpm@8.15.4",
  "scripts": {
    "dev:web": "pnpm --filter @take-a-break/web dev",
    "dev:voice-backend": "cd services/voice/web_agent && ./start_backend.sh",
    "dev:all": "concurrently \"pnpm dev:web\" \"pnpm dev:voice-backend\" --names \"web,voice\" --prefix-colors \"cyan,magenta\"",
    "build:web": "pnpm --filter @take-a-break/web build",
    "test:web": "pnpm --filter @take-a-break/web test"
  },
  "devDependencies": {
    "@types/node": "^20.11.19",
    "concurrently": "^8.2.2",
    "typescript": "^5.3.3"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "engines": {
    "node": ">=18.17.0"
  }
}
