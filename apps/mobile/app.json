{
  "expo": {
    "name": "Take a Break",
    "slug": "take-a-break",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.ming.takeabreak",
      "infoPlist": {
        "ITSAppUsesNonExemptEncryption": false,
        "NSLocationWhenInUseUsageDescription": "We use your location to recommend nearby break spots and walking routes.",
        "NSMicrophoneUsageDescription": "We use your microphone for voice chat to help you relax and take a break."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "package": "com.ming.takeabreak",
      "permissions": [
        "RECORD_AUDIO",
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.ACCESS_FINE_LOCATION"
      ],
      "config": {
        "googleMaps": {
          "apiKey": "YOUR_GOOGLE_MAPS_API_KEY"
        }
      }
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Allow Take a Break to use your location to recommend nearby break spots and walking routes."
        }
      ],
      "./app.plugin.js"
    ],
    "scheme": "takeabreak",
    "extra": {
      "eas": {
        "projectId": "62b775c3-ce76-4006-b4b0-58c6551ef7f2"
      }
    },
    "owner": "smartzdp"
  }
}
